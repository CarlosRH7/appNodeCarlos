extends ./layouts/standard.pug

block content
    <div class="row" style="margin-top:100px; margin-bottom:100px;">
        <div class="col-md-4 col-md-offset-8" style="margin-bottom:30px;">
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">Agregar Nuevo <span class="glyphicon glyphicon-plus-sign"></span> </button>
        </div>

        <div class="col-md-12">
            <div class="col-md-4">
                <select class="form-control">
                    <option value="0">Buscar por Categoría</option>
                    <option value="1">Uno</option>
                    <option value="2">Dos</option>
                    <option value="3">Tres</option>
                </select>
            </div>
            <div class="col-md-4">
                <input class="form-control" type="text" placeholder="Buscar por Nombre y Apellidos">
            </div>
            <div class="col-md-4">
                <button class="btn btn-success" style="width:80%;">Buscar <span class="glyphicon glyphicon-search"></span></button>
            </div>

        </div>

    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Agregar nuevo usuario</h4>
            </div>
            <div class="modal-body">

               <div class="col-md-12">
                    <form>
                        <div class="form-group">
                            <input class="form-control" type="text" required="true" name="nombre" id="nombre" placeholder="Nombre">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" required="true" name="apellidos" id="apellidos" placeholder="Apellidos">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="email" required="true" name="correo" id="correo" placeholder="Correo">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="tel" required="true" name="telefono" id="telefono" placeholder="Telefono">
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="categoria" id="categorias">
                                <option value="0">Selecciona una opción</option>
                                <option value="1">Uno</option>
                                <option value="2">Dos</option>
                                <option value="3">Tres</option>
                            </select>
                        </div>


                    </form>
               </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
            </div>
        </div>
    </div>

    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>John</td>
                    <td>Doe</td>
                    <td>john@example.com</td>
                    <td>1234567890</td>
                    <td><button class="btn btn-info" data-toggle="modal" data-target="#myModal">Editar <span class="glyphicon glyphicon-pencil"></span></button></td>
                    <td><button class="btn btn-danger">Eliminar <span class="glyphicon glyphicon-trash"></span></button></td>
                </tr>
                <tr>
                    <td>Mary</td>
                    <td>Moe</td>
                    <td>mary@example.com</td>
                    <td>1234567890</td>
                    <td><button class="btn btn-info" data-toggle="modal" data-target="#myModal">Editar <span class="glyphicon glyphicon-pencil"></span></button></td>
                    <td><button class="btn btn-danger">Eliminar <span class="glyphicon glyphicon-trash"></span></button></td>
                </tr>
                <tr>
                    <td>July</td>
                    <td>Dooley</td>
                    <td>july@example.com</td>
                    <td>1234567890</td>
                    <td><button class="btn btn-info" data-toggle="modal" data-target="#myModal">Editar <span class="glyphicon glyphicon-pencil"></span></button></td>
                    <td><button class="btn btn-danger">Eliminar <span class="glyphicon glyphicon-trash"></span></button></td>
                </tr>
            </tbody>
        </table>
    </div>

    script.
        var frm = $('#contactForm1');

        frm.submit(function (e) {

            e.preventDefault();

            $.ajax({
                type: frm.attr('method'),
                url: frm.attr('action'),
                data: frm.serialize(),
                success: function (data) {
                    console.log('Submission was successful.');
                    console.log(data);
                },
                error: function (data) {
                    console.log('An error occurred.');
                    console.log(data);
                },
            });
        });
 